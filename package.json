{
  "name": "joseffie-gulp-pack",
  "version": "2.3.3",
  "type": "module",
  "description": "Starter template and gulp settings for web development",
  "main": "gulpfile.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/joseffie/Gulp-Settings.git"
  },
  "scripts": {
    "dev": "gulp",
    "build": "gulp build --build",
    "pug:check": "pug-lint src/",
    "scss:check": "npx stylelint \"**/*.scss\"",
    "scss:lint": "npx stylelint \"**/*.scss\" --fix",
    "js:check": "eslint --ext=mjs,js --debug src/",
    "js:lint": "eslint --ext=mjs,js --debug src/ --fix",
    "all:check": "npm run scss:check & npm run js:check & npm run pug:check",
    "all:lint": "npm run scss:lint & npm run js:lint",
    "clean": "gulp reset",
    "fonts": "gulp createFonts",
    "sprite": "gulp makeSprite",
    "gh-pages": "npm run build && gulp deployGit",
    "zip": "gulp deployZIP --build"
  },
  "author": "Ivan Gavrilich (joseffie)",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "license": "Unlicensed",
  "devDependencies": {
    "babel-loader": "^8.2.5",
    "bem-tools-core": "latest",
    "browser-sync": "latest",
    "del": "latest",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^4.0.0",
    "gulp": "latest",
    "gulp-autoprefixer": "latest",
    "gulp-clean-css": "latest",
    "gulp-data": "^1.3.1",
    "gulp-fonter": "latest",
    "gulp-gh-pages": "^0.5.4",
    "gulp-group-css-media-queries": "latest",
    "gulp-if": "latest",
    "gulp-imagemin": "latest",
    "gulp-load-plugins": "latest",
    "gulp-newer": "latest",
    "gulp-notify": "latest",
    "gulp-plumber": "latest",
    "gulp-pug": "latest",
    "gulp-rename": "latest",
    "gulp-replace": "latest",
    "gulp-sass": "latest",
    "gulp-svg-sprite": "latest",
    "gulp-ttf2woff2": "latest",
    "gulp-version-number": "latest",
    "gulp-webp": "latest",
    "gulp-webp-html-nosvg": "latest",
    "gulp-webpcss": "^1.1.1",
    "gulp-zip": "latest",
    "prettier": "^2.7.1",
    "pug-lint": "^2.6.0",
    "sass": "latest",
    "stylelint": "^14.9.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0",
    "webp-converter": "^2.2.3",
    "webpack": "^5.70.0",
    "webpack-stream": "^7.0.0",
    "webpcss": "^1.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.pug": "pug-lint src/",
    "linters": {
      "*.scss": [
        "npm run scss:lint",
        "git add"
      ],
      "*.(js,jsx,mjs)": [
        "npm run js:lint",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@bem/sdk.config": "^0.1.0"
  },
  "resolutions": {
    "gift": "^0.10.2"
  }
}
